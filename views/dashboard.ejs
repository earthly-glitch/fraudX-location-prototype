<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  
  <!-- Leaflet CSS -->
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
  
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', sans-serif;
      background: linear-gradient(135deg, #0f2027 0%, #203a43 50%, #2c5364 100%);
      color: #e0e0e0;
      min-height: 100vh;
      padding: 20px;
    }

    .container {
      max-width: 1600px;
      margin: 0 auto;
    }

    /* Header */
    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 20px 0;
      margin-bottom: 40px;
      border-bottom: 1px solid rgba(52, 211, 153, 0.2);
    }

    .logo {
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .logo-icon {
      width: 40px;
      height: 40px;
      background: #34d399;
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: bold;
      font-size: 20px;
      color: #0f2027;
    }

    .logo-text {
      font-size: 24px;
      font-weight: 700;
      color: #fff;
    }

    .nav-links {
      display: flex;
      gap: 30px;
    }

    .nav-links a {
      color: #94a3b8;
      text-decoration: none;
      font-size: 16px;
      transition: color 0.3s;
    }

    .nav-links a:hover,
    .nav-links a.active {
      color: #34d399;
    }

    /* Main Content */
    .main-title {
      font-size: 48px;
      font-weight: 700;
      margin-bottom: 16px;
      background: linear-gradient(135deg, #34d399 0%, #10b981 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .subtitle {
      font-size: 18px;
      color: #94a3b8;
      margin-bottom: 40px;
      max-width: 700px;
    }

    .badge {
      display: inline-flex;
      align-items: center;
      gap: 6px;
      padding: 6px 14px;
      background: rgba(52, 211, 153, 0.1);
      border: 1px solid rgba(52, 211, 153, 0.3);
      border-radius: 20px;
      font-size: 13px;
      color: #34d399;
      margin-bottom: 20px;
    }

    /* Stats Grid */
    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
      margin-bottom: 30px;
    }

    .stat-card {
      background: rgba(15, 32, 39, 0.6);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(52, 211, 153, 0.2);
      border-radius: 12px;
      padding: 20px;
      transition: all 0.3s;
    }

    .stat-card:hover {
      border-color: rgba(52, 211, 153, 0.5);
      transform: translateY(-4px);
      box-shadow: 0 12px 30px rgba(0, 0, 0, 0.3);
    }

    .stat-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 12px;
    }

    .stat-label {
      font-size: 14px;
      color: #94a3b8;
      font-weight: 500;
    }

    .stat-icon {
      width: 36px;
      height: 36px;
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 18px;
    }

    .stat-value {
      font-size: 32px;
      font-weight: 700;
      color: #fff;
      margin-bottom: 8px;
    }

    .stat-change {
      font-size: 13px;
      display: flex;
      align-items: center;
      gap: 4px;
    }

    .stat-change.positive {
      color: #34d399;
    }

    .stat-change.negative {
      color: #ef4444;
    }

    .stat-change.neutral {
      color: #94a3b8;
    }

    /* Map Container */
    .map-section {
      background: rgba(15, 32, 39, 0.6);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(52, 211, 153, 0.2);
      border-radius: 16px;
      padding: 30px;
      margin-bottom: 30px;
    }

    .section-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }

    .section-title {
      font-size: 22px;
      font-weight: 600;
      color: #fff;
    }

    .filter-group {
      display: flex;
      gap: 10px;
    }

    .filter-btn {
      padding: 8px 16px;
      background: rgba(148, 163, 184, 0.2);
      border: 1px solid rgba(148, 163, 184, 0.4);
      border-radius: 6px;
      color: #94a3b8;
      font-size: 14px;
      cursor: pointer;
      transition: all 0.3s;
    }

    .filter-btn:hover,
    .filter-btn.active {
      background: rgba(52, 211, 153, 0.2);
      border-color: #34d399;
      color: #34d399;
    }

    #map {
      height: 600px;
      border-radius: 12px;
      border: 1px solid rgba(52, 211, 153, 0.1);
    }

    /* Dark map tiles */
    .leaflet-tile-pane {
      filter: brightness(0.6) invert(1) contrast(3) hue-rotate(200deg) saturate(0.3) brightness(0.7);
    }

    /* Recent Activity */
    .activity-section {
      display: grid;
      grid-template-columns: 2fr 1fr;
      gap: 20px;
    }

    .activity-card {
      background: rgba(15, 32, 39, 0.6);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(52, 211, 153, 0.2);
      border-radius: 12px;
      padding: 25px;
    }

    .activity-list {
      max-height: 400px;
      overflow-y: auto;
    }

    .activity-item {
      padding: 15px;
      background: rgba(15, 32, 39, 0.8);
      border-radius: 8px;
      margin-bottom: 12px;
      border-left: 3px solid transparent;
      transition: all 0.3s;
    }

    .activity-item:hover {
      background: rgba(15, 32, 39, 1);
      transform: translateX(5px);
    }

    .activity-item.fraud {
      border-left-color: #ef4444;
    }

    .activity-item.clean {
      border-left-color: #34d399;
    }

    .activity-item.warning {
      border-left-color: #fbbf24;
    }

    .activity-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 8px;
    }

    .device-badge {
      font-weight: 600;
      color: #fff;
      font-size: 14px;
    }

    .timestamp {
      font-size: 12px;
      color: #64748b;
    }

    .activity-details {
      font-size: 13px;
      color: #94a3b8;
      line-height: 1.6;
    }

    .fraud-tag {
      display: inline-block;
      padding: 2px 8px;
      background: rgba(239, 68, 68, 0.2);
      border: 1px solid rgba(239, 68, 68, 0.4);
      border-radius: 4px;
      font-size: 11px;
      color: #ef4444;
      margin-right: 6px;
      margin-top: 6px;
    }

    /* Alerts Panel */
    .alerts-panel {
      max-height: 400px;
      overflow-y: auto;
    }

    .alert-item {
      padding: 15px;
      background: rgba(239, 68, 68, 0.1);
      border: 1px solid rgba(239, 68, 68, 0.3);
      border-radius: 8px;
      margin-bottom: 12px;
      animation: slideIn 0.3s ease-out;
    }

    @keyframes slideIn {
      from {
        opacity: 0;
        transform: translateX(20px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    .alert-header {
      display: flex;
      align-items: center;
      gap: 8px;
      margin-bottom: 8px;
    }

    .alert-icon {
      font-size: 20px;
    }

    .alert-title {
      font-weight: 600;
      color: #ef4444;
      font-size: 14px;
    }

    .alert-body {
      font-size: 13px;
      color: #94a3b8;
      line-height: 1.5;
    }

    .risk-score {
      display: inline-block;
      padding: 4px 10px;
      background: rgba(239, 68, 68, 0.2);
      border-radius: 6px;
      font-weight: 600;
      color: #ef4444;
      font-size: 13px;
      margin-top: 8px;
    }

    .empty-state {
      text-align: center;
      padding: 60px 20px;
      color: #64748b;
    }

    .empty-state-icon {
      font-size: 48px;
      margin-bottom: 16px;
      opacity: 0.5;
    }

    /* Scrollbar */
    ::-webkit-scrollbar {
      width: 8px;
    }

    ::-webkit-scrollbar-track {
      background: rgba(15, 32, 39, 0.5);
    }

    ::-webkit-scrollbar-thumb {
      background: rgba(52, 211, 153, 0.3);
      border-radius: 4px;
    }

    ::-webkit-scrollbar-thumb:hover {
      background: rgba(52, 211, 153, 0.5);
    }

    /* Pulse animation for live indicator */
    @keyframes pulse {
      0%, 100% {
        opacity: 1;
      }
      50% {
        opacity: 0.5;
      }
    }

    .live-indicator {
      display: inline-flex;
      align-items: center;
      gap: 6px;
      padding: 4px 12px;
      background: rgba(34, 197, 94, 0.1);
      border-radius: 12px;
      font-size: 12px;
      color: #22c55e;
    }

    .live-dot {
      width: 8px;
      height: 8px;
      background: #22c55e;
      border-radius: 50%;
      animation: pulse 2s infinite;
    }

    @media (max-width: 768px) {
      .activity-section {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Header -->
    <header class="header">
      <div class="logo">
        <div class="logo-icon">FX</div>
        <span class="logo-text">FraudX</span>
      </div>
      <nav class="nav-links">
        <a href="/dashboard" class="active">Dashboard</a>
        <a href="/simulator">Simulator</a>
      </nav>
    </header>

    <!-- Main Content -->
    <div class="badge">üõ°Ô∏è Real-time Fraud Detection</div>
    <h1 class="main-title">Live Dashboard</h1>
    <p class="subtitle">Monitor location pings, detect fraudulent activity, and track user movements in real-time with AI-powered risk scoring.</p>

    <!-- Stats Grid -->
    <div class="stats-grid">
      <div class="stat-card">
        <div class="stat-header">
          <span class="stat-label">Total Pings</span>
          <div class="stat-icon" style="background: rgba(52, 211, 153, 0.2); color: #34d399;">üìç</div>
        </div>
        <div class="stat-value" id="totalPings">0</div>
        <div class="stat-change neutral">
          <span>‚è±Ô∏è</span> Last updated: <span id="lastUpdate">Never</span>
        </div>
      </div>

      <div class="stat-card">
        <div class="stat-header">
          <span class="stat-label">Fraud Alerts</span>
          <div class="stat-icon" style="background: rgba(239, 68, 68, 0.2); color: #ef4444;">‚ö†Ô∏è</div>
        </div>
        <div class="stat-value" id="fraudCount">0</div>
        <div class="stat-change" id="fraudChange">
          <span>üìä</span> <span id="fraudPercent">0%</span> of total
        </div>
      </div>

      <div class="stat-card">
        <div class="stat-header">
          <span class="stat-label">Active Devices</span>
          <div class="stat-icon" style="background: rgba(96, 165, 250, 0.2); color: #60a5fa;">üì±</div>
        </div>
        <div class="stat-value" id="activeDevices">0</div>
        <div class="stat-change positive">
          <span>üîÑ</span> Live tracking
        </div>
      </div>

      <div class="stat-card">
        <div class="stat-header">
          <span class="stat-label">Risk Score</span>
          <div class="stat-icon" style="background: rgba(251, 191, 36, 0.2); color: #fbbf24;">üéØ</div>
        </div>
        <div class="stat-value" id="avgRiskScore">0.0</div>
        <div class="stat-change" id="riskChange">
          <span>üìà</span> Average risk
        </div>
      </div>
    </div>

    <!-- Map Section -->
    <div class="map-section">
      <div class="section-header">
        <div>
          <h2 class="section-title">üìç Location Tracking Map</h2>
          <div class="live-indicator" style="margin-top: 8px;">
            <div class="live-dot"></div>
            <span>Live Updates</span>
          </div>
        </div>
        <div class="filter-group">
          <button class="filter-btn active" onclick="filterMap('all')">All</button>
          <button class="filter-btn" onclick="filterMap('fraud')">Fraud Only</button>
          <button class="filter-btn" onclick="filterMap('clean')">Clean Only</button>
        </div>
      </div>
      <div id="map"></div>
    </div>

    <!-- Recent Activity -->
    <div class="activity-section">
      <div class="activity-card">
        <h2 class="section-title" style="margin-bottom: 20px;">üìã Recent Activity</h2>
        <div class="activity-list" id="activityList">
          <div class="empty-state">
            <div class="empty-state-icon">üì°</div>
            <p>Waiting for location pings...</p>
          </div>
        </div>
      </div>

      <div class="activity-card">
        <h2 class="section-title" style="margin-bottom: 20px;">üö® Fraud Alerts</h2>
        <div class="alerts-panel" id="alertsPanel">
          <div class="empty-state">
            <div class="empty-state-icon">‚úÖ</div>
            <p>No fraud detected</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Leaflet JS -->
  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
  <!-- Socket.IO -->
  <script src="/socket.io/socket.io.js"></script>
  
  <script>
    const socket = io();
    const apiUrl = '<%= apiUrl %>';

    // Initialize map
    const map = L.map('map').setView([18.5204, 73.8567], 12);
    
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '¬© OpenStreetMap contributors',
      maxZoom: 19
    }).addTo(map);

    // Data storage
    let markers = new Map();
    let activities = [];
    let fraudAlerts = [];
    let stats = {
      totalPings: 0,
      fraudCount: 0,
      activeDevices: new Set(),
      riskScores: []
    };

    // Custom marker icons
    const cleanIcon = L.divIcon({
      className: 'custom-marker',
      html: `<div style="background: #34d399; width: 12px; height: 12px; border-radius: 50%; border: 2px solid #fff; box-shadow: 0 2px 8px rgba(52, 211, 153, 0.5);"></div>`,
      iconSize: [12, 12]
    });

    const fraudIcon = L.divIcon({
      className: 'custom-marker',
      html: `<div style="background: #ef4444; width: 16px; height: 16px; border-radius: 50%; border: 3px solid #fff; box-shadow: 0 2px 12px rgba(239, 68, 68, 0.7); animation: pulse 1.5s infinite;"></div>`,
      iconSize: [16, 16]
    });

    // Socket event listeners
    socket.on('location_update', (data) => {
      console.log('Location update:', data);
      handleLocationUpdate(data);
    });

    socket.on('fraud_alert', (data) => {
      console.log('Fraud alert:', data);
      handleFraudAlert(data);
    });

    function handleLocationUpdate(data) {
      const { deviceId, lat, lon, fraudTypes, riskScore, speed, timestamp } = data;

      // Update stats
      stats.totalPings++;
      stats.activeDevices.add(deviceId);
      if (riskScore) stats.riskScores.push(riskScore);
      if (fraudTypes) stats.fraudCount++;

      // Update or create marker
      const isFraud = fraudTypes && fraudTypes.length > 0;
      const marker = markers.get(deviceId);

      if (marker) {
        marker.setLatLng([lat, lon]);
        marker.setIcon(isFraud ? fraudIcon : cleanIcon);
      } else {
        const newMarker = L.marker([lat, lon], {
          icon: isFraud ? fraudIcon : cleanIcon
        }).addTo(map);

        const popupContent = `
          <div style="font-family: sans-serif; min-width: 200px;">
            <h3 style="margin: 0 0 10px 0; color: #0f2027; font-size: 16px;">${deviceId}</h3>
            <div style="font-size: 13px; color: #666;">
              <p style="margin: 4px 0;"><strong>Coordinates:</strong> ${lat.toFixed(4)}, ${lon.toFixed(4)}</p>
              ${speed ? `<p style="margin: 4px 0;"><strong>Speed:</strong> ${speed.toFixed(1)} km/h</p>` : ''}
              ${riskScore ? `<p style="margin: 4px 0;"><strong>Risk:</strong> ${(riskScore * 100).toFixed(0)}%</p>` : ''}
              ${fraudTypes ? `<p style="margin: 4px 0; color: #ef4444;"><strong>‚ö†Ô∏è ${fraudTypes.join(', ')}</strong></p>` : '<p style="margin: 4px 0; color: #34d399;">‚úÖ Clean</p>'}
            </div>
          </div>
        `;

        newMarker.bindPopup(popupContent);
        markers.set(deviceId, newMarker);
      }

      // Add to activity feed
      addActivity({
        deviceId,
        lat,
        lon,
        fraudTypes,
        riskScore,
        speed,
        timestamp,
        isFraud
      });

      // Update UI
      updateStats();
    }

    function handleFraudAlert(data) {
      addFraudAlert(data);
    }

    function addActivity(data) {
      activities.unshift(data);
      if (activities.length > 50) activities.pop();

      const activityList = document.getElementById('activityList');
      const activityClass = data.isFraud ? 'fraud' : 'clean';
      
      const item = document.createElement('div');
      item.className = `activity-item ${activityClass}`;
      item.innerHTML = `
        <div class="activity-header">
          <span class="device-badge">${data.deviceId}</span>
          <span class="timestamp">${new Date(data.timestamp).toLocaleTimeString()}</span>
        </div>
        <div class="activity-details">
          üìç ${data.lat.toFixed(4)}, ${data.lon.toFixed(4)}
          ${data.speed ? ` ‚Ä¢ üöó ${data.speed.toFixed(1)} km/h` : ''}
          ${data.riskScore ? ` ‚Ä¢ üéØ Risk: ${(data.riskScore * 100).toFixed(0)}%` : ''}
          ${data.fraudTypes ? data.fraudTypes.map(f => `<span class="fraud-tag">${f}</span>`).join('') : ''}
        </div>
      `;

      if (activityList.querySelector('.empty-state')) {
        activityList.innerHTML = '';
      }
      
      activityList.insertBefore(item, activityList.firstChild);

      // Limit to 20 displayed items
      while (activityList.children.length > 20) {
        activityList.removeChild(activityList.lastChild);
      }
    }

    function addFraudAlert(data) {
      fraudAlerts.unshift(data);
      if (fraudAlerts.length > 20) fraudAlerts.pop();

      const alertsPanel = document.getElementById('alertsPanel');
      
      const alert = document.createElement('div');
      alert.className = 'alert-item';
      alert.innerHTML = `
        <div class="alert-header">
          <span class="alert-icon">‚ö†Ô∏è</span>
          <span class="alert-title">${data.fraudTypes.join(', ')}</span>
        </div>
        <div class="alert-body">
          <strong>${data.deviceId}</strong><br>
          üìç ${data.lat.toFixed(4)}, ${data.lon.toFixed(4)}<br>
          ${data.speed ? `üöó Speed: ${data.speed.toFixed(1)} km/h<br>` : ''}
          üïê ${new Date(data.timestamp).toLocaleString()}
          <div class="risk-score">Risk Score: ${(data.riskScore * 100).toFixed(0)}%</div>
        </div>
      `;

      if (alertsPanel.querySelector('.empty-state')) {
        alertsPanel.innerHTML = '';
      }
      
      alertsPanel.insertBefore(alert, alertsPanel.firstChild);

      // Limit to 10 displayed alerts
      while (alertsPanel.children.length > 10) {
        alertsPanel.removeChild(alertsPanel.lastChild);
      }
    }

    function updateStats() {
      document.getElementById('totalPings').textContent = stats.totalPings;
      document.getElementById('fraudCount').textContent = stats.fraudCount;
      document.getElementById('activeDevices').textContent = stats.activeDevices.size;
      document.getElementById('lastUpdate').textContent = new Date().toLocaleTimeString();

      const fraudPercent = stats.totalPings > 0 
        ? ((stats.fraudCount / stats.totalPings) * 100).toFixed(1)
        : 0;
      document.getElementById('fraudPercent').textContent = fraudPercent + '%';

      const fraudChange = document.getElementById('fraudChange');
      if (fraudPercent > 10) {
        fraudChange.className = 'stat-change negative';
      } else if (fraudPercent > 5) {
        fraudChange.className = 'stat-change neutral';
      } else {
        fraudChange.className = 'stat-change positive';
      }

      const avgRisk = stats.riskScores.length > 0
        ? stats.riskScores.reduce((a, b) => a + b, 0) / stats.riskScores.length
        : 0;
      document.getElementById('avgRiskScore').textContent = avgRisk.toFixed(2);

      const riskChange = document.getElementById('riskChange');
      if (avgRisk > 0.7) {
        riskChange.className = 'stat-change negative';
      } else if (avgRisk > 0.4) {
        riskChange.className = 'stat-change neutral';
      } else {
        riskChange.className = 'stat-change positive';
      }
    }

    function filterMap(type) {
      // Update button states
      document.querySelectorAll('.filter-btn').forEach(btn => {
        btn.classList.remove('active');
      });
      event.target.classList.add('active');

      // Filter markers
      markers.forEach((marker, deviceId) => {
        const activity = activities.find(a => a.deviceId === deviceId);
        if (!activity) return;

        if (type === 'all') {
          marker.addTo(map);
        } else if (type === 'fraud' && activity.isFraud) {
          marker.addTo(map);
        } else if (type === 'clean' && !activity.isFraud) {
          marker.addTo(map);
        } else {
          marker.remove();
        }
      });
    }

    // Load initial data
    async function loadInitialData() {
      try {
        const response = await fetch(`${apiUrl}/api/location/logs`);
        const logs = await response.json();
        
        console.log('Loaded initial logs:', logs.length);
        
        logs.reverse().forEach(log => {
          handleLocationUpdate({
            deviceId: log.deviceId,
            lat: log.lat,
            lon: log.lon,
            fraudTypes: log.fraudFlag ? log.fraudFlag.split(', ').filter(f => f !== 'DeliveryPoint') : null,
            riskScore: log.riskScore,
            timestamp: log.timestamp
          });
        });
      } catch (error) {
        console.error('Error loading initial data:', error);
      }
    }

    // Initialize
    loadInitialData();
    console.log('Dashboard initialized');
  </script>
</body>
</html>
